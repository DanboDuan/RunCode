{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-stdlib=libc++",
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}/build/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "cmake make",
			"command": "cmake",
			"args": [
				"-S",
				".",
				"-B",
				"build"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"type": "shell",
			"label": "cmake build",
			"command": "cmake",
			"args": [
				"--build",
				"build"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"type": "shell",
			"label": "cmake test",
			"command": "ctest",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"dependsOn": [
				"cmake make",
				"cmake build"
			],
			"dependsOrder": "sequence",
			"problemMatcher": []
		}
	]
}